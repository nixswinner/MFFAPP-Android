<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add A service"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
              <!--      <TextView
                        android:id="@+id/txtsp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose the Route::"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_toRightOf="@+id/txtsp"
                        android:textColor="#ccc8c8"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:layout_below="@+id/spinner"
                        android:id="@+id/txtroute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />-->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/login_input_layout_pass1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/input_route"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Route -(Nyeri-Nairobi)" />
                    </android.support.design.widget.TextInputLayout>

                   <android.support.design.widget.TextInputLayout
                       android:id="@+id/login_input_layout_pass"
                       android:layout_width="match_parent"
                       android:layout_below="@+id/login_input_layout_pass1"
                       android:layout_height="wrap_content">
                       <EditText
                           android:id="@+id/input_pass_capacity"
                           android:textColor="#000000"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="number"
                           android:hint="Passenger Capacity" />
                   </android.support.design.widget.TextInputLayout>
                   <android.support.design.widget.TextInputLayout
                       android:id="@+id/input_layout_cost"

                       android:layout_width="match_parent"
                       android:layout_below="@+id/login_input_layout_pass"
                       android:layout_height="wrap_content">
                       <EditText
                           android:id="@+id/input_cost"
                           android:textColor="#000000"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="number"
                           android:hint="Cost" />
                   </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:visibility="gone"
                        android:layout_marginTop="20sp"
                        android:id="@+id/input_layout_date"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/input_layout_cost"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/input_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#706d6d"
                            android:textSize="18sp"
                            android:text="Depature Date"

                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="20sp"
                        android:id="@+id/input_layout_time"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/input_layout_date"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/input_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#706d6d"
                            android:textSize="20sp"
                            android:text="Set Depature Time"

                            />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:visibility="visible"
                        android:layout_marginTop="20sp"
                        android:id="@+id/input_layout_pickup"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/input_layout_time"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_pickup_station"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Pick up Station" />
                    </android.support.design.widget.TextInputLayout>

                    <!--   <Button
                        android:layout_below="@+id/input_layout_cost"
                        android:id="@+id/btn_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:text="Choose Date"
                         />
                    <Button
                        android:layout_below="@+id/btn_date"
                        android:id="@+id/btn_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:text="Choose Time"
                       />-->

                    <Button
                        android:layout_below="@+id/input_layout_pickup"
                        android:id="@+id/btn_addservice"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rect"
                        android:text="Add Service"
                        android:textColor="@android:color/white" />
               </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>