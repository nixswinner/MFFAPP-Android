<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:gravity=""
                android:textSize="20sp"
                android:textColor="#627ef1"
                android:id="@+id/pass_name"
                />
            <TextView
                android:layout_below="@+id/pass_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel.No:"
                android:textColor="#627ef1"
                android:textSize="20sp"
                android:id="@+id/txtt"
                />
            <TextView
                android:layout_below="@+id/pass_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#627ef1"
                android:id="@+id/pass_phone"
                android:textSize="20sp"
                android:layout_toRightOf="@id/txtt"
                />
            <TextView
                android:layout_below="@+id/pass_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Call Now "
                android:textColor="#263264"
                android:textSize="20sp"
                android:textStyle="bold"
                />
           <!-- <Button
                android:id="@+id/btn_call"
                android:background="@drawable/ic_perm_phone_msg_black_24dp"
                android:layout_below="@id/pass_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>